<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trang"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".activity.ManHinhChinhActivity">
<Button
    android:id="@+id/btnTaiKhoan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tài khoản"
    android:layout_gravity="right"
    android:textColor="@color/trang"
  android:background="@drawable/botron"/>
    <ImageView
        android:layout_marginBottom="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/nobita"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnChoiGame"
        android:layout_marginBottom="15dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="chơi game"
        android:layout_gravity="center"
        android:textColor="@color/trang"
        android:background="@drawable/botron"/>
    <Button
        android:id="@+id/btnHuongDan"
        android:layout_marginBottom="15dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="hướng dẫn"
        android:layout_gravity="center"
        android:textColor="@color/trang"
        android:background="@drawable/botron"/>
    <Button
        android:id="@+id/btnDiemCao"
        android:layout_marginBottom="15dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="điểm cao"
        android:layout_gravity="center"
        android:textColor="@color/trang"
        android:background="@drawable/botron"/>
    <Button
        android:id="@+id/btnThoat"
        android:layout_marginBottom="15dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_gravity="center"
        android:textColor="@color/trang"
        android:background="@drawable/botron"/>

</LinearLayout>
